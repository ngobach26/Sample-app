<li class="micropost mb-3">
  <div class="card">
    <div class="card-body">
      <p><%= micropost.content %></p>
      <% if micropost.image.attached? %>
        <%= image_tag micropost.image.variant(:display) %>
      <% end %>
      <small class="text-muted"><%= time_ago_in_words(micropost.created_at) %> ago</small>
      <%= link_to 'delete', micropost, data: { 'turbo-method': :delete,
                                          turbo_confirm: 'You sure?' }, class: 'btn btn-danger btn-sm' %>
    </div>
  </div>
</li>
