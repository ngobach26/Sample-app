<div class="col-md-4">
  <%= form_with model: @micropost do |f| %>
    <%= render 'shared/error_messages', resource: f.object %>
    <div class='field'>
      <%= f.text_area :content, placeholder: 'Compose new micropost...' %>
    </div>
    <span class='image'>
      <%= f.file_field :image %>
    </span>
    <%= f.submit 'Post', class: 'btn btn-primary' %>
  <% end %>
</div>
