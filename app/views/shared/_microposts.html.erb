<div class="col-md-8">
  <% if @user.microposts.any? %>
    <div class="card microposts-card">
      <div class="card-header text-center">
        <h3>Microposts (<%= @user.microposts.count %>)</h3>
      </div>
      <div class="card-body">
        <ol class="microposts list-unstyled">
          <%= render @microposts %>
        </ol>
        <%= will_paginate @microposts %>
      </div>
    </div>
  <% end %>
</div>
