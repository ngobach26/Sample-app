<div class="form-container">
  <h2 class="form-title"><%= t('.change_your_password') %></h2>
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <%= f.hidden_field :reset_password_token %>
    <div class="mb-3">
      <%= f.label :password, t('.new_password'), class: "form-label" %>
      <% if @minimum_password_length %>
        <em class="form-text text-muted"><%= t('devise.shared.minimum_password_length', count: @minimum_password_length) %></em>
      <% end %>
      <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "form-control" %>
    </div>
    <div class="mb-3">
      <%= f.label :password_confirmation, t('.confirm_new_password'), class: "form-label" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
    </div>
    <div class="form-footer">
      <%= f.submit t('.change_my_password'), class: "btn btn-primary w-100" %>
    </div>
  <% end %>
  <div class="mt-3">
    <%= render "devise/shared/links" %>
  </div>
</div>
